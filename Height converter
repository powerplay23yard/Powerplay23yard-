<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Height Converter</title>
    <script>
        function convertHeight() {
            const cmInput = document.getElementById('cmInput').value;
            const feetInput = document.getElementById('feetInput').value;
            const inchesInput = document.getElementById('inchesInput').value;

            if (cmInput) {
                // Convert cm to feet and inches
                const cm = parseFloat(cmInput);
                const totalInches = cm / 2.54;
                const feet = Math.floor(totalInches / 12);
                const inches = Math.round(totalInches % 12);
                document.getElementById('feetOutput').value = feet;
                document.getElementById('inchesOutput').value = inches;
            } else if (feetInput || inchesInput) {
                // Convert feet and inches to cm
                const feet = parseFloat(feetInput) || 0;
                const inches = parseFloat(inchesInput) || 0;
                const totalInches = (feet * 12) + inches;
                const cm = totalInches * 2.54;
                document.getElementById('cmOutput').value = cm.toFixed(2);
            }
        }
    </script>
</head>
<body>
    <h1>Height Converter</h1>
    <div>
        <h2>Centimeters to Feet and Inches</h2>
        <label for="cmInput">Centimeters:</label>
        <input type="number" id="cmInput" oninput="convertHeight()">
        <br>
        <label for="feetOutput">Feet:</label>
        <input type="number" id="feetOutput" readonly>
        <br>
        <label for="inchesOutput">Inches:</label>
        <input type="number" id="inchesOutput" readonly>
    </div>
    <div>
        <h2>Feet and Inches to Centimeters</h2>
        <label for="feetInput">Feet:</label>
        <input type="number" id="feetInput" oninput="convertHeight()">
        <br>
        <label for="inchesInput">Inches:</label>
        <input type="number" id="inchesInput" oninput="convertHeight()">
        <br>
        <label for="cmOutput">Centimeters:</label>
        <input type="number" id="cmOutput" readonly>
    </div>
</body>
</html>
